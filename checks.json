                "check:cpptest": ["check:cppbuild"],
                "check:cpplint": ["check:cppbuild"]
            }
        },
        {
            "checkset": "generic-tools",
            "with": { "run_on": "linux", "target_arch": "x86_64", "compiler_name": "clang", "gen": "Ninja" },
            "chains": { "check:cppfmt": [], "check:docgen": ["check:cppfmt"], "check:pylint": [] }
        }
    ],
    "on_commit": []
}
